*
  box-sizing border-box
  margin 0
  padding 0

body
  align-items center
  background #fff
  display flex
  font-family Arial, Helvetica, sans-serif
  height 100vh
  justify-content center
  width 100vw

.login
  border solid 1px #0384FC
  border-radius 4px
  box-shadow 1px 1px 5px #949494
  display flex
  flex-direction column
  padding 20px 25px

.login-group
  display flex
  flex-direction column
  padding 15px 0
  width 100%

  label
    color #4D4D4D
    padding 5px 0
    text-transform capitalize
    
  input
    border solid 1px #949494
    border-radius 4px
    padding 10px

  input::placeholder
    color #949494

  button
    background #0384FC
    border none
    border-radius 1px
    color #FFF
    cursor pointer
    padding 10px 0
    text-transform capitalize
    width 100%