*
  box-sizing border-box
  margin 0
  padding 0

body
  display flex
  justify-content center
  align-items center
  width 100vw
  height 100vh
  font-family Arial, Helvetica, sans-serif
  background #fff

.login
  border solid 1px #0384FC
  border-radius 4px
  box-shadow 1px 1px 5px #949494
  display flex
  flex-direction column
  padding 20px 25px

.login-group
  display flex
  flex-direction column
  padding 15px 0
  width 100%

  label
    text-transform capitalize
    padding 5px 0
    color #4D4D4D

  input
    padding 10px
    border-radius 4px
    border solid 1px #949494

  input::placeholder
    color: #949494

  button
    border none
    color #FFF
    cursor pointer
    background #0384FC
    padding 10px 0
    text-transform capitalize
    border-radius 1px
    width 100%

span
  color red